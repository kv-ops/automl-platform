# Mode et environnement
AUTOML_MODE=saas
ENVIRONMENT=production
AUTOML_EXPERT_MODE=false

# Base de données PostgreSQL
POSTGRES_HOST=db           # service postgres dans docker-compose, sinon l’hôte Render
POSTGRES_PORT=5432
POSTGRES_USER=automl
POSTGRES_PASSWORD=automl_secret
POSTGRES_DB=automl
DATABASE_URL=postgresql://automl:automl_secret@db:5432/automl

# Cache Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_URL=redis://:redis_secret@redis:6379/0

# Stockage Minio / S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=automl
MINIO_REGION=us-east-1
MINIO_SECURE=false

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_USER=mlflow
MLFLOW_PASSWORD=mlflow123
MLFLOW_AUTH_CONFIG=basic

# API FastAPI
API_PORT=8000
API_HOST=0.0.0.0
LOG_LEVEL=info
JWT_SECRET_KEY=change-me-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Interface Streamlit
UI_FRAMEWORK=streamlit
UI_PORT=8501
UI_THEME=light
UI_TITLE="AutoML Platform"
STREAMLIT_SERVER_PASSWORD=""
API_BASE_URL=http://api:8000

# Authentification SSO (Keycloak)
SSO_ENABLED=true
KEYCLOAK_HOSTNAME=keycloak
KEYCLOAK_PORT=8080
KEYCLOAK_REALM=automl
KEYCLOAK_CLIENT_ID=automl-platform
KEYCLOAK_CLIENT_SECRET=secret
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Authentification SSO (Okta / Auth0) - désactivez KEYCLOAK_* si vous utilisez l’un de ces services
OKTA_ENABLED=false
OKTA_DOMAIN=""
OKTA_CLIENT_ID=""
OKTA_CLIENT_SECRET=""
AUTH0_ENABLED=false
AUTH0_DOMAIN=""
AUTH0_CLIENT_ID=""
AUTH0_CLIENT_SECRET=""

# Gestion multi-tenant et quotas
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT_PLAN=trial
DEFAULT_LANGUAGE=en
ENABLE_AI_ASSISTANT=true
ENABLE_AUTO_ML=true
ENABLE_CHAT_ASSISTANT=true
ENABLE_COLLABORATION=true
ENABLE_GPU=false

# Workers Celery
CPU_WORKER_REPLICAS=2
CPU_WORKER_CONCURRENCY=4
CPU_WORKER_CORES=4
CPU_WORKER_MEMORY=8
CPU_WORKER_PORT=5555  # port Flower
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
GRAFANA_SSO_ENABLED=true

# LLM & CRM (facultatif)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACEHUB_API_TOKEN=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
# CRM_API_KEY=   # HubSpot, Salesforce…

# Sécurité
SESSION_SECRET_KEY=ui-session-secret

# Autres
MAX_UPLOAD_SIZE=1000  # Mo
UI_DOCKERFILE=Dockerfile
API_DOCKERFILE=Dockerfile
WORKER_DOCKERFILE=Dockerfile
