# AutoML Platform - Streamlit Secrets Configuration
# ===================================================
# 
# Copy this file to .streamlit/secrets.toml and adjust the values for your deployment
# You can also set these values as environment variables with uppercase names
# For example: API_BASE_URL, MLFLOW_TRACKING_URI, etc.

# API Configuration
# -----------------
# Base URL for the AutoML API backend
api_base_url = "http://localhost:8000"

# MLflow tracking server URL
mlflow_tracking_uri = "http://localhost:5000"

# Expert Mode Configuration
# -------------------------
# Default mode for new users (true/false)
expert_mode_default = false

# Database Configuration (if needed)
# -----------------------------------
# PostgreSQL connection string
# database_url = "postgresql://user:password@localhost:5432/automl"

# Redis configuration for caching
# redis_url = "redis://localhost:6379/0"

# Authentication Configuration (Optional)
# ----------------------------------------
# Secret key for JWT tokens
# jwt_secret_key = "your-secret-key-here"

# OAuth providers (if enabled)
# google_client_id = "your-google-client-id"
# google_client_secret = "your-google-client-secret"

# Google Sheets Configuration (Optional)
# ---------------------------------------
# Path to Google service account credentials JSON
# google_sheets_credentials_path = "/path/to/credentials.json"

# Or inline credentials (be careful with security)
# [google_sheets_credentials]
# type = "service_account"
# project_id = "your-project-id"
# private_key_id = "your-key-id"
# private_key = "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# client_email = "your-service-account@project.iam.gserviceaccount.com"
# client_id = "your-client-id"
# auth_uri = "https://accounts.google.com/o/oauth2/auth"
# token_uri = "https://oauth2.googleapis.com/token"
# auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
# client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/..."

# CRM Configuration (Optional)
# ----------------------------
# HubSpot configuration
# hubspot_api_key = "your-hubspot-api-key"

# Salesforce configuration
# salesforce_username = "your-username"
# salesforce_password = "your-password"
# salesforce_security_token = "your-security-token"
# salesforce_domain = "https://your-domain.my.salesforce.com"

# Pipedrive configuration
# pipedrive_api_token = "your-pipedrive-token"
# pipedrive_domain = "your-company"

# AWS Configuration (Optional)
# -----------------------------
# aws_access_key_id = "your-access-key"
# aws_secret_access_key = "your-secret-key"
# aws_region = "us-east-1"
# s3_bucket_name = "automl-platform-data"

# Azure Configuration (Optional)
# -------------------------------
# azure_storage_connection_string = "DefaultEndpointsProtocol=https;..."
# azure_container_name = "automl-data"

# GCP Configuration (Optional)
# -----------------------------
# gcp_project_id = "your-project-id"
# gcs_bucket_name = "automl-platform-data"

# Model Registry Configuration
# -----------------------------
# model_registry_uri = "s3://your-bucket/models"
# artifact_location = "s3://your-bucket/artifacts"

# Monitoring Configuration
# ------------------------
# Enable performance monitoring
enable_monitoring = true

# Prometheus metrics endpoint
prometheus_port = 9090

# Datadog configuration (if used)
# datadog_api_key = "your-datadog-api-key"
# datadog_app_key = "your-datadog-app-key"

# Feature Flags
# -------------
# Enable/disable specific features
enable_gpu_support = false
enable_distributed_training = false
enable_streaming = false
enable_llm_insights = false

# UI Configuration
# ----------------
# Maximum file upload size in MB
max_upload_size = 1000

# Session timeout in minutes
session_timeout = 60

# Theme settings
theme_primary_color = "#1E88E5"
theme_background_color = "#FFFFFF"
theme_secondary_background_color = "#F0F2F6"
theme_text_color = "#262730"

# Advanced Settings
# -----------------
# Number of parallel workers
n_workers = 4

# Cache TTL in seconds
cache_ttl = 3600

# API timeout in seconds
api_timeout = 30

# Enable debug mode
debug_mode = false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
log_level = "INFO"

# Development Settings
# --------------------
# Hot reload for development
development_mode = false

# Show detailed error messages
show_error_details = false

# Enable profiling
enable_profiling = false

# Security Settings
# -----------------
# Enable HTTPS only
https_only = false

# CORS allowed origins
cors_allowed_origins = ["http://localhost:3000", "http://localhost:8501"]

# Rate limiting (requests per minute)
rate_limit = 100

# IP whitelist (comma-separated)
# ip_whitelist = "127.0.0.1,192.168.1.0/24"

# Notes
# -----
# 1. Never commit the actual secrets.toml file to version control
# 2. Use environment variables for production deployments
# 3. Rotate secrets regularly
# 4. Use secure connections (HTTPS) in production
# 5. Limit access to sensitive configuration files
